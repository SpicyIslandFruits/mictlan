{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 2001,
            "pathMappings": {
                "/var/www/html/": "${workspaceFolder}"
            }
        },
        {
            "type": "bun",
            "request": "launch",
            "name": "Debug bundemo",
            "program": "${workspaceFolder}/cmd/bundemo/index.ts",
            "cwd": "${workspaceFolder}",
            "watchMode": true
        }
    ]
}